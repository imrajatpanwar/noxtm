# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
# For production, use MongoDB Atlas or your production MongoDB instance
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/noxtmstudio?retryWrites=true&w=majority

# JWT Configuration
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Frontend URL (for CORS)
# Update this to your production frontend URL
FRONTEND_URL=https://your-frontend-domain.com

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
